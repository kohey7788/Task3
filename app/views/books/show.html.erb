<div>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
  <table>
    <tbody>
      <tr>
	      <th>name</th>
	      <th><%= @user.name %></th>
      </tr>
      <tr>
	      <th>introduction</th>
	      <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
</div>

<%= link_to '編集', edit_user_path(@user.id) %>

<div>
  <h1>New book</h1>
  <%= form_with model: @book_new, local:true do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>
    <h4>opinion</h4>
    <%= f.text_area :body %>
    <div><%= f.submit 'Create Book' %></div>
  <% end %>
</div>

<div>
  <h1>Book detail</h1>
    <table>
  		<tbody>
  		  <tr>
          <td>
            <div><%= attachment_image_tag @user, :profile_image, size: "40x40", fallback: "no_image.jpg" %></div>
            <div><%= link_to @user.name ,user_path(@user) %></div>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user_id == current_user.id %>
            <%= link_to "Edit", edit_book_path(@book) %>
            <% end %>
          </td>
          <td>
            <% if @book.user_id == current_user.id %>
            <%= link_to "Destroy", book_path(@book), method: :delete %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
</div>