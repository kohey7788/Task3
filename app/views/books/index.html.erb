<p id="notice">
<%= notice %>
</p>

<% if @book.errors.any? %>
<%= @book.errors.count %>件のerror
<% @book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>

<div>
  <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
  <table>
    <tbody>
      <tr>
	      <th>name</th>
	      <th><%= current_user.name %></th>
      </tr>
      <tr>
	      <th>introduction</th>
	      <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>
</div>

<%= link_to '編集', edit_user_path(current_user.id) %>

<div>
  <h1>New book</h1>
  <%= form_with model: @book, local:true do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>
    <h4>opinion</h4>
    <%= f.text_area :body %>
    <div><%= f.submit 'Create Book' %></div>
  <% end %>
</div>

<div>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>title</th>
        <th>opinion</th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>