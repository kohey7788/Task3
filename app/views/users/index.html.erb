<div class = "container">
  <div class = "row">
    <div class = "col-md-3">
      <div>
        <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
        <table class = "table">
          <tbody>
        <tr>
      	  <th>name</th>
      	  <th><%= current_user.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= current_user.introduction %></th>
        </tr>
      </tbody>
        </table>
      </div>

      <%= link_to "", edit_user_path(current_user.id), class: "fas fa-user-cog btn btn-outline-secondary btn-block" %>

      <div>
      <h1>New book</h1>
      <%= form_with model: @book, local:true do |f| %>
        <h4>title</h4>
        <%= f.text_field :title %>
        <h4>opinion</h4>
        <%= f.text_area :body %>
        <div><%= f.submit 'Create Book', class: "btn btn-success" %></div>
      <% end %>
      </div>
    </div>

    <div class = "col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class = "table table-inverse table-hover users-table" >
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, size: "40x40", fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>