<p id="notice">
  <%=  notice %>
</p>

<div class = "container">
  <div class = "row">
    <div class = "col-md-3">
      <div>
        <h1>users Info</h1>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
        <table class = "table">
          <tbody>
            <tr>
      	      <th>name</th>
      	      <th><%= @user.name %></th>
            </tr>
            <tr>
      	      <th>introduction</th>
      	      <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
      </div>

      <%= link_to '', edit_user_path(@user.id), class: "fas fa-user-cog btn btn-outline-secondary btn-block" %>

      <div>
        <h1>New book</h1>
        <%= form_with model: @book, local:true do |f| %>
          <h4>title</h4>
            <%= f.text_field :title %>
          <h4>opinion</h4>
            <%= f.text_area :body %>
            <div><%= f.submit 'Create Book', class: "btn btn-success" %></div>
        <% end %>
      </div>
    </div>

    <div class = "col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class = "table table-inverse table-hover users-table">
        <thead>
          <tr>
            <th></th>
            <th>title</th>
            <th>opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
              <%= attachment_image_tag book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>