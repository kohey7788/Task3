<!DOCTYPE html>
<html>
  <head>
    <title>Task3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/737e049f96.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="navbar navbar-dark bg-dark navbar-expand-lg navbar-inverse">
      <div class = "container">
        <ul class="navbar-nav mr-3" >
        <li><%= link_to "Bookers", root_path, class: "text-white" %></li>
        </ul>
        <ul class="navbar-nav ml-auto mr-3">
          <% if user_signed_in? %>
            <li class="nav-item mr-2">
              <%= link_to "Home", user_path(current_user), class: "fas fa-home text-white" %>
            </li>
            <li class="nav-item mr-2">
              <%= link_to "Users", users_path, class: "fas fa-users text-white" %>
            </li>
            <li class="nav-item mr-2">
              <%= link_to "Books", books_path, class: "fas fa-book-open text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to "logout", destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt text-white" %>
            </li>
          <% else %>
            <li class="nav-item mr-2">
              <%= link_to "Home", root_path, class: "fas fa-home text-white" %>
            </li>
            <li class="nav-item mr-2">
              <%= link_to "About", home_about_path, class: "fas fa-link text-white" %>
             </li>
            <li class="nav-item mr-2">
              <%= link_to "sign up", new_user_registration_path, class: "fas fa-user-plus text-white" %>
             </li>
            <li class="nav-item">
              <%= link_to "login", new_user_session_path, class: "fas fa-sign-in-alt text-white" %>
            </li>
          <% end %>
        </ul>
      </div>
    </header>

    <div>
      <%= yield %>
    </div>
    <footer>
    <div class = "container mt-5">
      <div class = "row">
        <div class = "mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
    </footer>
  </body>
</html>
