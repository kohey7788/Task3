<!DOCTYPE html>
<html>
  <head>
    <title>Task3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/737e049f96.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
      <ul class="navbar-nav mr-3" >
      <li><%= link_to "Bookers", root_path %></li>
      </ul>
      <ul class="navbar-nav ml-auto mr-3">
        <% if user_signed_in? %>
          <li class="nav-item mr-2">
            <%= link_to "Home", user_path(current_user), class: "fa fa-home" %>
          </li>
          <li class="nav-item mr-2">
            <%= link_to "Users", users_path, class: "fa fa-users" %>
          </li>
          <li class="nav-item mr-2">
            <%= link_to "Books", books_path, class: "fa fa-book" %>
          </li>
          <li class="nav-item">
            <%= link_to "logout", destroy_user_session_path, method: :delete, class: "fa fa-sign-out" %>
          </li>
        <% else %>
          <li class="nav-item mr-2">
            <%= link_to "Home", root_path, class: "fa fa-home" %>
          </li>
          <li class="nav-item mr-2">
            <%= link_to "About", home_about_path, class: "fa fa-link" %>
           </li>
          <li class="nav-item mr-2">
            <%= link_to "Sign up", new_user_registration_path, class: "fa fa-user-plus" %>
           </li>
          <li class="nav-item">
            <%= link_to "login", new_user_session_path, class: "fa fa-sign-in" %>
          </li>
        <% end %>
      </ul>
    </nav>
    <div class = "container">
      <div class = "row">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
